{
  "manifest_version": 3,
  "name": "Kanji Grid Companion",
  "version": "0.3",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
"background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
